<!-- Re-usuable code to add into specefic views below-->
@model Game
    <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" alt="image for Nintendo shop" />
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                <h3><a asp-controller="Game" asp-action="Details" asp-route-id="@Model.GameId">@Model.Name</a></h3>
                <p style="text-decoration: underline;" class="text-center">@Model.GameSystem</p>
                <p style="text-align: justify;">@Model.ShortDescription</p>
            </div>
            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-primary"
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-gameId="@Model.GameId">Add to Cart</a>
                </p>
            </div>
        </div>
    </div>