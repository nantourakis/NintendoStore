@model Game

<h1>@Model.Name</h1>

<div class="thumbnail pic">
    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption-full main-caption">
        <h3 class="pull-right" style="padding: 40px">@Model.Price.ToString("c")</h3>
        <h3 style="padding-left: 10px"><a href="#">@Model.Name</a></h3>
        <p style="padding-left: 10px; text-align: justify;">@Model.Description</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-gameId="@Model.GameId">Add To Cart</a>
        </p>
    </div>
</div>